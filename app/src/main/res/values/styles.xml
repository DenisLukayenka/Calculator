<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/liteBlue</item>
        <item name="colorPrimaryDark">@color/liteBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_button_style">
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="action_button_style" parent="default_button_style">
        <item name="android:textColor">@color/liteBlue</item>
    </style>

    <style name="default_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="expression_on_focus" parent="default_text_style">
        <item name="android:textColor">@color/focusedView</item>
        <item name="android:textSize">@dimen/expressionFocusedTextSize</item>
    </style>
    <style name="expression_not_focused" parent="default_text_style">
        <item name="android:textColor">@color/notFocusedView</item>
        <item name="android:textSize">@dimen/expressionUnFocusedTextSize</item>
    </style>

    <style name="result_on_focus" parent="default_text_style">
        <item name="android:textColor">@color/focusedView</item>
        <item name="android:textSize">@dimen/resultFocusedTextSize</item>
    </style>
    <style name="result_not_focused" parent="default_text_style">
        <item name="android:textColor">@color/notFocusedView</item>
        <item name="android:textSize">@dimen/resultUnFocusedTextSize</item>
    </style>
</resources>
